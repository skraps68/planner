# Environment Configuration Example
# Copy this file to .env and update values as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application
PROJECT_NAME="Program and Project Management System"
VERSION="1.0.0"
ENVIRONMENT="development"  # Options: development, staging, production
DEBUG=true  # Set to false in production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY="your-secret-key-here-change-in-production"  # Generate with: openssl rand -hex 32
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# CORS - Update with your frontend URLs
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_SERVER="localhost"  # Use "db" when running in Docker
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"  # CHANGE IN PRODUCTION!
POSTGRES_DB="planner"
POSTGRES_PORT="5432"

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_HOST="localhost"  # Use "redis" when running in Docker
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""  # Set password in production

# =============================================================================
# BACKGROUND TASKS CONFIGURATION
# =============================================================================

# Celery
CELERY_BROKER_URL="redis://localhost:6379/0"  # Use redis://redis:6379/0 in Docker
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Build
BUILD_TARGET="development"  # Options: development, production

# Docker Ports
APP_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Docker Volumes
VOLUME_MODE="rw"  # Options: rw (read-write), ro (read-only)

# =============================================================================
# PRODUCTION-ONLY CONFIGURATION
# =============================================================================

# AWS Configuration (for production deployment)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Database Connection Pool (production)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Logging (production)
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # Options: json, text

# Monitoring (production)
SENTRY_DSN=""  # Sentry error tracking
DATADOG_API_KEY=""  # Datadog monitoring

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@example.com"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_CELERY=false  # Enable background task processing
ENABLE_METRICS=false  # Enable Prometheus metrics
ENABLE_TRACING=false  # Enable distributed tracing