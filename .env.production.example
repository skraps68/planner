# Production Environment Configuration
# Copy this file to .env for production deployment
# IMPORTANT: Update all placeholder values before deploying!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

PROJECT_NAME="Program and Project Management System"
VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false

# =============================================================================
# SECURITY CONFIGURATION - CRITICAL: CHANGE ALL VALUES!
# =============================================================================

# Generate with: openssl rand -hex 32
SECRET_KEY="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING"

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours for production

# CORS - Add your production frontend URLs
BACKEND_CORS_ORIGINS="https://your-frontend-domain.com,https://app.your-domain.com"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database - Use RDS endpoint in AWS
POSTGRES_SERVER="your-rds-endpoint.region.rds.amazonaws.com"
POSTGRES_USER="planner_admin"
POSTGRES_PASSWORD="CHANGE-THIS-TO-SECURE-PASSWORD"
POSTGRES_DB="planner_production"
POSTGRES_PORT="5432"

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache - Use ElastiCache endpoint in AWS
REDIS_HOST="your-elasticache-endpoint.region.cache.amazonaws.com"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD="CHANGE-THIS-TO-SECURE-PASSWORD"

# =============================================================================
# BACKGROUND TASKS CONFIGURATION
# =============================================================================

# Celery
CELERY_BROKER_URL="redis://:REDIS-PASSWORD@your-elasticache-endpoint:6379/0"
CELERY_RESULT_BACKEND="redis://:REDIS-PASSWORD@your-elasticache-endpoint:6379/0"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="YOUR-AWS-ACCESS-KEY"
AWS_SECRET_ACCESS_KEY="YOUR-AWS-SECRET-KEY"

# S3 Configuration (for file uploads)
S3_BUCKET_NAME="planner-production-uploads"
S3_REGION="us-east-1"

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE=0.1

# Datadog Monitoring
DATADOG_API_KEY="YOUR-DATADOG-API-KEY"
DATADOG_APP_KEY="YOUR-DATADOG-APP-KEY"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration (for notifications)
SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
SMTP_PORT=587
SMTP_USER="YOUR-SMTP-USER"
SMTP_PASSWORD="YOUR-SMTP-PASSWORD"
SMTP_FROM_EMAIL="noreply@your-domain.com"
SMTP_FROM_NAME="Program Management System"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_CELERY=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

BUILD_TARGET="production"
APP_PORT=8000
VOLUME_MODE="ro"
