# Example Terraform Variables File
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region  = "us-east-1"
environment = "production"
project_name = "planner"

# VPC Configuration
vpc_cidr                 = "10.0.0.0/16"
availability_zones_count = 2

# ECS Configuration
app_image      = "123456789012.dkr.ecr.us-east-1.amazonaws.com/planner-production-app:latest"
app_port       = 8000
app_count      = 2
fargate_cpu    = 1024  # 1 vCPU
fargate_memory = 2048  # 2 GB

# Database Configuration
db_instance_class    = "db.t3.medium"
db_allocated_storage = 100
db_name              = "planner"
db_username          = "planner_admin"
db_password          = "CHANGE-THIS-TO-SECURE-PASSWORD"  # Use AWS Secrets Manager in production

# Redis Configuration
redis_node_type       = "cache.t3.medium"
redis_num_cache_nodes = 1

# Application Configuration
secret_key = "CHANGE-THIS-TO-SECURE-RANDOM-STRING"  # Generate with: openssl rand -hex 32

# Domain Configuration (optional)
domain_name     = "planner.example.com"
certificate_arn = ""  # Leave empty to create new certificate, or provide existing ACM certificate ARN

# Auto Scaling Configuration
autoscaling_min_capacity  = 2
autoscaling_max_capacity  = 10
autoscaling_target_cpu    = 70
autoscaling_target_memory = 80

# Backup Configuration
backup_retention_period = 7
backup_window           = "03:00-04:00"
maintenance_window      = "sun:04:00-sun:05:00"

# Monitoring Configuration
enable_container_insights = true
log_retention_days        = 30
alert_email               = "devops@example.com"
